<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="VitalPetsApp.PetFormPage"
             Title="Agregar Mascota">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry x:Name="nameEntry" Placeholder="Nombre" />
            <Entry x:Name="speciesEntry" Placeholder="Especie" />
            <Entry x:Name="breedEntry" Placeholder="Raza" />
            <DatePicker x:Name="birthDatePicker" />
            <Button Text="Guardar Mascota" Clicked="OnSaveClicked"/>
            <Button Text="Ver Mascotas" Clicked="OnViewPetsClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
