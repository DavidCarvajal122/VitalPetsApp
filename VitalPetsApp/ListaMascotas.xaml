<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="VitalPetsApp.PetListPage"
             Title="Lista de Mascotas">
    <CollectionView x:Name="petCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Margin="5">
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding Species}" />
                        <Label Text="{Binding Breed}" />
                        <Label Text="{Binding BirthDate, StringFormat='Nacimiento: {0:dd/MM/yyyy}'}"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
