<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VitalPetsApp.Registro"
             Title="Registro">
    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Usuario" FontAttributes="Bold" />
            <Entry x:Name="newUserEntry" Placeholder="Ingrese su usuario" />

            <Label Text="Contraseña" FontAttributes="Bold" />
            <Entry x:Name="newPasswordEntry" Placeholder="Ingrese su contraseña" IsPassword="True" />

            <Label Text="Confirmar Contraseña" FontAttributes="Bold" />
            <Entry x:Name="confirmPasswordEntry" Placeholder="Repita la contraseña" IsPassword="True" />

            <Label Text="Número de teléfono" FontAttributes="Bold" />
            <Entry x:Name="phoneEntry" Placeholder="Ingrese su número" Keyboard="Telephone" />

            <Label Text="Correo electrónico" FontAttributes="Bold" />
            <Entry x:Name="emailEntry" Placeholder="Ingrese su correo electrónico" Keyboard="Email" />

            <Button Text="Registrarse" Clicked="OnRegisterClicked" />
        </VerticalStackLayout>
    </ScrollView>

    
</ContentPage>
